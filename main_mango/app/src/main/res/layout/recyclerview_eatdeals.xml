<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="260dp"

    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/gradient_eatdeals"
            ></View>

        <ImageView
            android:id="@+id/imageUrl_eatdeals"
            android:layout_width="match_parent"
            android:layout_height="150dp"


            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_car_circle" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/status_eatdeals"
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:layout_marginTop="72dp"
                android:background="@drawable/btn_shape_eatdeals"


                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="NEW"

                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/percent_eatdeals"
                android:layout_width="55dp"
                android:layout_height="25dp"

                android:layout_marginTop="10dp"
                android:background="@drawable/btn_shape_two_eatdeals"
                android:gravity="center"

                android:paddingLeft="20dp"
                android:text="31%"

                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/status_eatdeals"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/salePrice_eatDeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="₩18,500"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/originalPrice_eatDeals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:text="₩17,500"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/salePrice_eatDeals"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <TextView

        android:id="@+id/title_eatdeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="[신촌] 비밀시그니처 현대백화점 신촌점"
        android:textColor="@color/black"
        android:textSize="20dp"


        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="178dp"></TextView>

    <TextView
        android:id="@+id/item_eatdeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:text="고르곤졸라 피자"
        ></TextView>
    <TextView
        android:id="@+id/description_eatdeals"
        android:text="현대백화점 신촌점 Dining Week 전용 EAT딜입니다"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:layout_marginRight="30dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_shape_three_eatdeals"


        ></TextView>
</LinearLayout>
