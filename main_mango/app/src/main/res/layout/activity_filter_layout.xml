        ></ImageView>
        <ImageView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/offjapanfood"
        android:text="rooror"
        ></ImageView>
        <ImageView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
