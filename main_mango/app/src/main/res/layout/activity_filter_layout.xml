            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:layout_rowWeight="1"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="가격/1인당"
            ></TextView>

        <TextView
