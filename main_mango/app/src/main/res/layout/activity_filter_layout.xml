            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
        android:src="@drawable/offwesternfood"
            android:text="rooror"
        ></ImageView>
        <TextView
            android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="0.5"
        android:layout_rowWeight="0.5"
        android:text="한식"
        ></TextView>
        <TextView
            android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
            android:layout_columnWeight="0.5"
            android:layout_rowWeight="0.5" android:text="일식"
        ></TextView>
        <TextView
            android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
            android:layout_columnWeight="0.5"
            android:layout_rowWeight="0.5" android:text="중식"
        ></TextView>
        <TextView
            android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
            android:layout_columnWeight="0.5"
            android:layout_rowWeight="0.5"
            android:text="양식"
        ></TextView>
        <ImageView
            android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
