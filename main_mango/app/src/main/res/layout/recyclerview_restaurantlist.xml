<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    android:layout_margin="5dp"

    android:background="@drawable/custom_ripple_effect"
   >





    <ImageView
        android:id="@+id/img_restarant"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:src="@drawable/dummy_picture"


        android:scaleType="centerCrop"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>
<!--    android:scaleType="fitXY"-->


    <ImageView
        android:id="@+id/eye_grey"
        android:layout_width="12dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_eye_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/area_restaurant">


    </ImageView>

    <TextView
        android:id="@+id/area_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동대문구 - 2.94km"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_restarant"></TextView>

    <TextView
        android:id="@+id/title_restarant"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:text="1. 시키카츠"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_restarant"></TextView>

    <TextView
        android:id="@+id/seen_num_restarant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 8,902"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/eye_grey"
        app:layout_constraintTop_toBottomOf="@+id/area_restaurant"></TextView>

    <ImageView
        android:id="@+id/pencil_grey"
        android:layout_width="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_pencil_gray"
        app:layout_constraintLeft_toRightOf="@+id/seen_num_restarant"
        app:layout_constraintTop_toBottomOf="@+id/area_restaurant"></ImageView>

    <TextView
        android:id="@+id/review_num_restarant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 8,902"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/pencil_grey"
        app:layout_constraintTop_toBottomOf="@+id/area_restaurant"></TextView>

    <TextView

        android:id="@+id/rating_restarant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:text="4.3"
        android:textSize="17dp"

        app:layout_constraintStart_toEndOf="@+id/title_restarant"
        app:layout_constraintTop_toBottomOf="@+id/img_restarant"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>
